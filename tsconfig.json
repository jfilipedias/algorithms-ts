{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "types": [ "node", "jest" ],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
